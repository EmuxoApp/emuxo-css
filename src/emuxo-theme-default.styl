$color-blue = #4193f2
$color-red = #dc46a0
$color-green = #8cc896
$font-size-small = 14px
$font-size-normal = 18px

body, button, textarea, input[type=text], input[type=password], input[type=number], textarea
  font-family: 'Mulish', sans-serif;
  font-weight: 500;
  font-size: $font-size-normal
  line-height: 1.5

body
  color: rgb(60, 60, 60)
  background-color: white

h1
  font-size: 40px
h2
  font-size: 30px
h3
  font-size: 22px

.em-error-message
  color: $color-red

button.em-button, a.em-button
  background-color: $color-green

button.em-button-danger, a.em-button-danger
  background-color: $color-red

button.em-button-secondary, a.em-button-secondary
  background-color: rgba(200, 200, 200, 1)

button.em-button-link
  color: $color-blue
  font-size: $font-size-normal
  &:focus
    text-shadow: 0 0 2px rgba(0, 0, 0, 0.2);

.em-textbox, .em-textarea, .em-dropdown
  > label
    font-size: $font-size-small
  p
    font-size: $font-size-small
    &.em-error
      color: $color-red

.em-checkbox
  input[type="checkbox"]:checked + span
    background-color: $color-green

.em-selection
  input[type="radio"]:checked + span
    color: $color-green

.em-dropdown-options
  label.em-dropdown-options-selected
      background-color: $color-green

a
  color: $color-blue

.em-color-red
  color: $color-red
.em-color-green
  color: $color-green
.em-color-blue
  color: $color-blue
